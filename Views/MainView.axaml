<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AutoGears.Views.MainView"
			 xmlns:vm="using:AutoGears.ViewModels"
			 x:DataType="vm:MainViewModel">

	<SplitView IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="200">
		<SplitView.Pane>
			<Grid RowDefinitions="100, 60, 60, 60, *, 80" ShowGridLines="True">
				<StackPanel Grid.Row="6" VerticalAlignment="Center">
					<Button Content="Поменять тему" Command="{Binding ToggleThemeCommand}"/>
					<Button Content="Выйти" Command="{Binding ExitCommand}"/>
				</StackPanel>
			</Grid>
		</SplitView.Pane>
		<SplitView.Content>
			<Grid>
				<TextBlock Text="Content"
						   FontSize="24"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"/>
			</Grid>
			<!--<Border Background="#eeeeee">
				<TransitioningContentControl Content="{Binding}"/>
			</Border>-->
		</SplitView.Content>
	</SplitView>
</UserControl>
